@{
    ViewBag.Title = "切换皮肤";
    ViewBag.PageId = "qzero-skin";
    Layout = null;
}

<div id="@ViewBag.PageId">

    <style>
        #qzero-skin {
            width: 500px;
            padding: 0 0 0 15px;
        }

            #qzero-skin .group {
                border: 1px solid #dfdfdf;
                min-height: 65px;
                float: left;
                width: 70px;
                margin: 0 10px 10px 0;
                border-radius: 5px;
                padding: 5px 8px;
                cursor: pointer;
                position: relative;
            }

            #qzero-skin .disabled {
                cursor: default;
            }

            #qzero-skin .active {
                box-shadow: 0 0 7px 0 #ddd;
            }

            #qzero-skin .check {
                position: absolute;
                bottom: 2px;
                right: 5px;
            }
            #qzero-skin .icon-check{
                color:#fff !important;
            }
    </style>

    <div class="skin-container"></div>

